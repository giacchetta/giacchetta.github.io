---
import { Picture } from 'astro:assets';
import whatsapp from '../assets/img/whatsapp.png';
import email from '../assets/img/email.png';
import signal from '../assets/img/signal.png';
---
<div class="row justify-content-center text-center p-3">
    <p class="fs-4">Don't hesitate to reach out</p>
    <div class="col-3">
        <a href="https://wa.me/59897995367">
            <Picture
            class="img-thumbnail"
            src={whatsapp}
            alt="Whatsapp"
            height={75}
            ></Picture>
        </a>
    </div>
    <div class="col-3">
        <a href="mailto:giacchetta-consulting@outlook.com?subject=Looking%20forward%20working%20together%21">
            <Picture
            class="img-thumbnail"
            src={email}
            alt="Email"
            height={75}
            ></Picture>
          </a>
    </div>
    <div class="col-3">
        <a href="https://signal.me/#p/+59897995367">
            <Picture
            class="img-thumbnail"
            src={signal}
            alt="signal"
            height={75}
            ></Picture>
          </a>
    </div>						
</div>
