---
import { publicCloud } from '../data/public-cloud.js';
import { privateCloud } from '../data/private-cloud.js';
import { development } from '../data/development.js';
import { netsec } from '../data/netsec.js';

// Configuration array for credentials sections
const credentialSections = [
  { title: 'Public Cloud', data: publicCloud },
  { title: 'Private Cloud', data: privateCloud },
  { title: 'Development', data: development },
  { title: 'Networking & Security', data: netsec }
];
---
<h2>Credentials</h2>
<ul>
  {credentialSections.map((section) => (
    <li class="list-unstyled">
      <h3>{section.title}</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          {section.data &&
            section.data.map((entry) => (
              <tr>
                <td>{entry.product}</td>
                <td>{entry.typelnk == '#' ? entry.type : <a href={entry.typelnk}>{entry.type}</a>}</td>
                <td>{entry.namelnk == '#' ? entry.name : <a href={entry.namelnk}>{entry.name}</a>}</td>
              </tr>
            ))}
        </tbody>
      </table>
    </li>
  ))}
</ul>
