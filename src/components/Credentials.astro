---
import { publicCloud } from '../data/public-cloud.js';
import { privateCloud } from '../data/private-cloud.js';
import { development } from '../data/development.js';
import { netsec } from '../data/netsec.js';
import { getAllPages, getFeaturedPagesByCategory } from '../utils/content.js';

// Configuration array for credentials sections
const credentialSections = [
  { title: 'Public Cloud', data: publicCloud },
  { title: 'Private Cloud', data: privateCloud },
  { title: 'Development', data: development },
  { title: 'Networking & Security', data: netsec }
];

// Get featured MDX content pages
const allPages = await getAllPages();
const featuredCredentialsPages = getFeaturedPagesByCategory(allPages, 'credentials');
---
<h2>Credentials</h2>

{featuredCredentialsPages.length > 0 && (
  <div class="mb-4">
    <h4 class="text-primary">Detailed Credentials</h4>
    <div class="row">
      {featuredCredentialsPages.map((page) => (
        <div class="col-md-6 col-lg-4 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                <a href={`/${page.slug}`} class="text-decoration-none">
                  {page.data.title}
                </a>
              </h5>
              {page.data.description && (
                <p class="card-text text-muted small">{page.data.description}</p>
              )}
              <a href={`/${page.slug}`} class="btn btn-sm btn-outline-primary">
                Learn More â†’
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
)}

<ul>
  {credentialSections.map((section) => (
    <li class="list-unstyled">
      <h3>{section.title}</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Type</th>
            <th scope="col">Name</th>
          </tr>
        </thead>
        <tbody>
          {section.data &&
            section.data.map((entry) => (
              <tr>
                <td>{entry.product}</td>
                <td>{entry.typelnk == '#' ? entry.type : <a href={entry.typelnk}>{entry.type}</a>}</td>
                <td>{entry.namelnk == '#' ? entry.name : <a href={entry.namelnk}>{entry.name}</a>}</td>
              </tr>
            ))}
        </tbody>
      </table>
    </li>
  ))}
</ul>
