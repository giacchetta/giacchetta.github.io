---
import Favicon from '../assets/img/favicon.png';
import Footer from '../components/Footer.astro';
import '../styles/bootstrap.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Luciano Giacchetta is an experienced IT consultant. Specialized in DevOps, Cloud, and Development. Available for hourly contracts." />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/png" href={Favicon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-light">
		<slot />
		<Footer />
	</body>
</html>
<script>
	import 'bootstrap/dist/js/bootstrap.js';
</script>
<style is:global>
	html, body {
		width: 100%;
		overflow-x: hidden;
	}

	@media (min-width: 992px) {
	.layout {
		max-width: 75%;
		}
	}

	@media (min-width: 1400px) {
	.layout {
		max-width: 50%;
		}
	}	
</style>
