{
  "name": "web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "cp node_modules/bootstrap/dist/css/bootstrap.min.css src/styles/bootstrap.css && astro dev",
    "start": "npm run dev",
    "build": "purgecss --css node_modules/bootstrap/dist/css/bootstrap.min.css --content src/**/*.astro --output src/styles/bootstrap.css && astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "astro": "^5.17.1",
    "bootstrap": "^5.3.8"
  },
  "devDependencies": {
    "purgecss": "^8.0.0"
  }
}
