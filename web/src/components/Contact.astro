---
import { Picture } from 'astro:assets';
import whatsapp from '../assets/img/whatsapp.png';
import telegram from '../assets/img/telegram.png';
import x from '../assets/img/x-logo-black.png';
---
<div class="row justify-content-center text-center p-3">
    <p class="fs-4">Feel free to contact me whenever</p>
    <div class="col-3">
        <a href="https://wa.me/59897995367">
            <Picture
            class="img-thumbnail"
            src={whatsapp}
            alt="Whatsapp"
            height={75}
            ></Picture>
        </a>
    </div>
    <div class="col-3">
        <a href="https://x.com/messages/compose?recipient_id=1872633918647574528">
            <Picture
            class="img-thumbnail"
            src={x}
            alt="Email"
            height={75}
            ></Picture>
          </a>
    </div>
    <div class="col-3">
        <a href="https://t.me/+59897995367">
            <Picture
            class="img-thumbnail"
            src={telegram}
            alt="telegram"
            height={75}
            ></Picture>
          </a>
    </div>						
</div>