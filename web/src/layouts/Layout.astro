---
import 'bootstrap/dist/css/bootstrap.css';
import Footer from '../components/Footer.astro';

import Favicon from '../assets/img/favicon.png';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Giacchetta Consulting" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="icon" type="image/png" href={Favicon.src} />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="qLfc52ow5_XRAzYc684AOcsb7LSTM9gJtLZwSFFHuP4" />
		<meta name="msvalidate.01" content="A77EF2A041C9672BEB0B6E4DCAFD911C" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<Footer/>
</html>
<script src="bootstrap/dist/js/bootstrap.js"></script>
